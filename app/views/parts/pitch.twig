<section id="pitch" class="text-center">
	{% if event and event.registration_info.is_open %}
		<h2 class="tag">Build something awesome</h2>
	{% else %}
		<h2 class="tag">Get your ticket!</h2>
	{% endif %}
	<div class="pitch-info">
		{% if event and event.registration_info.is_open %}
			<p>Practice your skills, meet new people, and have fun.</p>
			<p>Get your ticket before they're sold out!</p>
			<a href="/{{ event.webname }}/register" class="button register-button round-corners">Let's code</a>
		{% else %}
			<p>Registrations aren't yet open, but we can let you know when they are!</p>
			<input type="email" class="subscription-email" placeholder="Email"><!--
	        --><input type="submit" value="Subscribe" class="subscription-submit">
		{% endif %}
	</div>
</section>
